<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@android:color/holo_red_light"
    tools:context=".updateActivity">

    <EditText
        android:id="@+id/bookTitle3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="104dp"
        android:layout_marginEnd="24dp"
        android:ems="10"
        android:hint="@string/title"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/author3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/author"
        android:inputType="textPersonName"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/bookTitle3"
        app:layout_constraintStart_toStartOf="@+id/bookTitle3"
        app:layout_constraintTop_toBottomOf="@+id/bookTitle3" />

    <EditText
        android:id="@+id/nbPages3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="@string/nb_pages"
        android:inputType="number"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/author3"
        app:layout_constraintStart_toStartOf="@+id/author3"
        app:layout_constraintTop_toBottomOf="@+id/author3" />

    <Button
        android:id="@+id/updateBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/update_btn"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/nbPages3"
        app:layout_constraintStart_toStartOf="@+id/nbPages3"
        app:layout_constraintTop_toBottomOf="@+id/nbPages3" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:backgroundTint="@android:color/holo_red_dark"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="@string/delete_btn"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="@+id/nbPages3"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/nbPages3"
        app:layout_constraintTop_toBottomOf="@+id/nbPages3" />
</androidx.constraintlayout.widget.ConstraintLayout>